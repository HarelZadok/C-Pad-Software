<Window x:Class="C_Pad_Software.WaitingForConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:C_Pad_Software"
        mc:Ignorable="d"
        Title="WaitingForConnection" Height="450" Width="800"        
        ResizeMode="CanMinimize">
    
        <StackPanel Background="Black">
            <TextBlock Foreground="White"
                       Margin="10,10,0,0">Waiting for connection...</TextBlock>
            <TextBlock Foreground="White"
                       Margin="10,10,0,0"
                       Visibility="Collapsed">Connected successfully on COM</TextBlock>
            <TextBlock Foreground="White"
                       Margin="10,10,0,0"
                       Visibility="Collapsed">Launching C-Pad Driver Software...</TextBlock>
        </StackPanel>
</Window>

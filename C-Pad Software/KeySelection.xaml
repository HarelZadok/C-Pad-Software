                    Height="25"
                    Click="OnKeyRecord">Rec</Button>
        </StackPanel>
        <CheckBox
            Name="Click"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Foreground="Black"
            IsChecked="False"
            Checked="OnClickChanged"
            Unchecked="OnClickChanged">

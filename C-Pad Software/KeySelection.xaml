                Name="Box"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="0,5,10,10"
                Width="90"
                HorizontalContentAlignment="Center"
                IsTextSearchEnabled="True"
                IsEditable="True"
                StaysOpenOnEdit="True"
                SelectionChanged="OnKeyboardButtonSelected"
